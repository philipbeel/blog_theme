{{! Each post will be output using this markup }}
{{#foreach posts}}

<article class="{{post_class}}">

  {{#if image}}

    <div class="post-image post-image-support">
      <a href="{{url}}" title="{{title}}">
        <img src="{{image}}" alt="{{title}}" />
      </a>
    </div>

  {{else}}

    <div class="post-image"><a href="{{url}}" title="{{title}}">{{content words="0"}}</a></div>

  {{/if}}

  <div class="inner">
    <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
    <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YY"}}</time>
    <p>{{excerpt}}[&hellip;]</p>
    {{#if tags}}<p class="post-tags">{{tags}}</p>{{/if}}
    <a class="more" href="{{url}}">Read more</a>

  </div>
  <span class="star"></span>
</article>

{{/foreach}}

